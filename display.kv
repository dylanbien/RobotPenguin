<MainScreen>:
    name: 'main'
	id: main1
    GridLayout:
		id: grid
        cols: 3
        rows: 3
        minimum_size: 300, 300
        padding: 10
        spacing: 1

# BUTTON DECLARATIONS
        Button:
			size_hint: None, None
			id: button1
			on_press: root.resetBoard()
			y: self.parent.y
			x: self.parent.x
			Image:
				id: image1
				source: 'ICON_Bear.png'
				y: self.parent.y
				x: self.parent.x
				size_hint: None, None
			Scatter:
				id: scatter1
				size_hint: None,None
				do_rotation: False
				do_scale: False
				do_translation: False
				rotation: 0
				pos: self.parent.x, self.parent.y
