<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

# BUTTONS
        Button: # X BUTTON
            text: 'X'
            font_size: 23
            size_hint: None,None
            size: root.width * 0.017, root.width * 0.015
            x: root.width * 0.972
            y: root.height * 0.945
            background_color: 0.7, 0.7, 0.7, 1
            on_release: root.quitPopup()

        Button: # LEFT BUTTON
            text: 'TURN LEFT'
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width *0.0175
            y: root.height * 0.04
            on_release: root.queueAction('left ')
			

        Button: # UP BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.2575
            y: root.height * 0.04
            text: 'MOVE FORWARD'
            on_release: root.queueAction('forward ')

        Button: # DOWN BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.4975
            y: root.height * 0.04
            text: 'MOVE BACKWARD'
            on_release: root.queueAction('backward ')

        Button: # RIGHT BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.7375
            y: root.height * 0.04
            text: 'TURN RIGHT'
            state: 'normal'
            on_release: root.queueAction('right ')
			
		Button: # GO BUTTON
			size_hint: None, None
			size: root.width * 0.05, root.height * 0.1
			text: 'GO'
			x: root.width * .9
			y: root.height * .85
			on_release: root.executeAction()
			
		Button: # CLEAR BUTTON
			size_hint: None, None
			size: root.width * 0.05, root.height * 0.1
			text: 'CLEAR'
			x: root.width * .85
			y: root.height * .85
			on_release: root.clearAction()

# IMAGES
        Screen:
            Image:
                source: 'cards/CARD_Left.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.0175
                y: root.height * 0.12
                #on_release: root.callPopup()
            Image:
                source: 'cards/CARD_Up.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.2575
                y: root.height * 0.12
            Image:
                source: 'cards/CARD_Down.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.4975
                y: root.height * 0.12
            Image:
                source: 'cards/CARD_Right.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.7375
                y: root.height * 0.12

