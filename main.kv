<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

# BUTTONS
        Button: # X BUTTON
            text: 'X'
            font_size: 23
            size_hint: None,None
            size: root.width * 0.017, root.width * 0.015
            x: root.width * 0.972
            y: root.height * 0.945
            background_color: 0.7, 0.7, 0.7, 1
            on_release: root.quitPopup()

        Button: # LEFT BUTTON
            text: 'TURN LEFT'
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width *0.0175
            y: root.height * 0.04
            on_release: root.queueAction('left ')
			

        Button: # UP BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.2575
            y: root.height * 0.04
            text: 'MOVE FORWARD'
            on_release: root.queueAction('forward ')

        Button: # DOWN BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.4975
            y: root.height * 0.04
            text: 'MOVE BACKWARD'
            on_release: root.queueAction('backward ')

        Button: # RIGHT BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.7375
            y: root.height * 0.04
            text: 'TURN RIGHT'
            state: 'normal'
            on_release: root.queueAction('right ')
			
		Button: # GO BUTTON
			size_hint: None, None
			size: root.width * 0.05, root.height * 0.1
			text: 'GO'
			x: root.width * .9
			y: root.height * .85
			on_release: root.executeAction()
			
		Button: # CLEAR BUTTON
			size_hint: None, None
			size: root.width * 0.05, root.height * 0.1
			text: 'CLEAR'
			x: root.width * .85
			y: root.height * .85
			on_release: root.clearAction()

# IMAGES
        Screen:
            Image:
                source: 'cards/CARD_Left.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.0175
                y: root.height * 0.12
                #on_release: root.callPopup()
            Image:
                source: 'cards/CARD_Up.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.2575
                y: root.height * 0.12
            Image:
                source: 'cards/CARD_Down.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.4975
                y: root.height * 0.12
            Image:
                source: 'cards/CARD_Right.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.7375
                y: root.height * 0.12

<NewGame>:
    name: 'newGame'
    FloatLayout:
        size_hint: None, None
        
# BUTTONS
        Button: #EASY BUTTON
            size_hint: None,None
            font_size: 65
            size: root.width * 0.2, root.height * 0.15
            x: root.width * 0.15
            y: root.height * 0.45
            text: 'EASY'
            background_normal: ''
            background_color: 0.0, 1.0, 0.0, 1.0
            on_release: root.setMainScreen()

        Button: #MEDIUM BUTTON
            size_hint: None,None
            font_size: 65
            size: root.width * 0.2, root.height * 0.15
            x: root.width * 0.4
            y: root.height * 0.45
            outline_width: 500
            outline_color: 0.0, 0.0, 0.0
            text: 'MEDIUM'
            background_normal: ''
            background_color: 1.0, 1.0, 0.0, 1.0
            on_release: root.setMainScreen()


        Button: #HARD BUTTON
            size_hint: None,None
            font_size: 65
            size: root.width * 0.2, root.height * 0.15
            x: root.width * 0.65
            y: root.height * 0.45
            text: 'HARD'
            background_normal: ''
            background_color: 1.0, 0.0, 0.0, 1.0
            on_release: root.setMainScreen()

# LABELS

        Label:
            text: 'New Game'
            font_size: 175
            size: root.width * 0.75, root.height * 0.4
            x: root.width * 0.47
            y: root.height * 0.85

        Label:
            text: 'Select a Difficulty'
            font_size: 75
            size: root.width * 0.5, root.height * 0.3
            #halign: 'center'
            #valign: 'middle'
            x: root.width * 0.47
            y: root.height * 0.675

# IMAGES
        Screen:
            Image:
                source: 'images/DPEA.jpeg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.825
                y: root.height * 0.6

            Image:
                source: 'images/penguins3.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: None, None
                size: root.width * 0.2, root.height * 0.15
                x: root.width * 0.65
                y: root.height * 0.25

            Image:
                source: 'images/penguins.jpeg'
                keep_ratio: True
                opacity: 1
                size_hint: None, None
                size: root.width * 0.2, root.height * 0.15
                x: root.width * 0.4
                y: root.height * 0.25

            Image:
                source: 'images/easyPenguins.jpeg'
                keep_ratio: True
                opacity: 1
                size_hint: None, None
                size: root.width * 0.2, root.height * 0.15
                x: root.width * 0.15
                y: root.height * 0.25