<TitleScreen>:
    name: 'title'
    FloatLayout:
        size_hint: None, None

# BUTTONS
        Button:
            size_hint: None,None
            font_size: 55
            size: root.width * 0.2, root.height * 0.15
            x: root.width * 0.4
            y: root.height * 0.35
            text: 'Start'
            font_name: 'RobotoMono-Regular.ttf'
            background_normal: ''
            background_color: 0.6, 0.6, 1.0, 1.0
            on_release: root.setInstructionScreen()

        Label:
            text: 'Robot Penguin'
            font_name: 'RobotoMono-Regular.ttf'
            font_size: 175
            size: root.width * 0.75, root.height * 0.4
            x: root.width * 0.47
            y: root.height * 0.65

        Screen:
            Image:
                source: 'images/DPEA_burned.png'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.825
                y: root.height * 0.625
            Image:
                source: 'images/6cbd62c894fd7e5d5db6466753cbd746_burned.png'
                allow_stretch: True
                keep_ratio: True
                size_hint_y: 8
                size_hint_x: 23.25
                opacity: 1
                x: -715
                y: -350
            Image:
                source: 'images/iceberg2.png'
                allow_stretch: True
                keep_ratio: True
                size_hint_y: 8
                size_hint_x: 23.25
                opacity: 1
                x: 515
                y: -350

<InstructionScreen>:
    name: 'instruction'
    FloatLayout:
        size_hint: None, None

# BUTTONS
        Button:
            size_hint: None,None
            font_size: 65
            size: root.width * 0.2, root.height * 0.15
            x: root.width * 0.75
            y: root.height * 0.085
            text: 'Ready'
            font_name: 'RobotoMono-Regular.ttf'
            background_normal: ''
            background_color: 0.4, 0.4, 0.4, 1.0
            on_release: root.setNewScreen()

        Label:
            text: 'Instructions'
            font_name: 'RobotoMono-Regular.ttf'
            font_size: 175
            size: root.width * 0.75, root.height * 0.4
            x: root.width * 0.47
            y: root.height * 0.8

        Label:
            text: 'The goal of the game is to direct the penguin to the fish.\n \nTurn and maneuver the penguin to get to the fish as quickly as possible.\n \nSelect the order you want the penguin to turn and move in, then press \'go\'.\n \nYou can\'t go through mountains, so you\'ll have to go around them.\n \nWatch out for the bear! If it gets to you before you reach the fish, you lose.'
            font_name: 'RobotoMono-Regular.ttf'
            font_size: 45
            size: root.width * 0.25, root.height * 0.125
            x: root.width * 0.475
            y: root.height * 0.5

        Screen:
            Image:
                source: 'images/DPEA_burned.png'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.825
                y: root.height * 0.625


<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

# BUTTONS

        # BUTTONS
        Button: #help button
            text: '?'
            font_name: 'RobotoMono-Regular.ttf'
            font_size: 23
            size_hint: None,None
            size: root.width * (1.5*0.017), root.width * (1.5*0.015)
            x: root.width * 0.972
            y: root.height * 0.875
            background_color: 0.7, 0.7, 0.7, 1
            on_release: root.instructionPopup()

        Button: # X BUTTON
            text: 'X'
            font_name: 'RobotoMono-Regular.ttf'
            font_size: 23
            size_hint: None,None
            size: root.width * (1.5*0.017), root.width * (1.5*0.015)
            x: root.width * 0.972
            y: root.height * 0.945
            background_color: 0.7, 0.7, 0.7, 1
            on_release: root.victoryPopup()

        Button: # LEFT BUTTON
            text: 'TURN LEFT'
            font_name: 'RobotoMono-Regular.ttf'
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width *0.0175
            y: root.height * 0.04
            on_release: root.queueAction('left ')
			

        Button: # UP BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.2575
            y: root.height * 0.04
            text: 'MOVE FORWARD'
            font_name: 'RobotoMono-Regular.ttf'
            on_release: root.queueAction('forward ')

        Button: # DOWN BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.4975
            y: root.height * 0.04
            text: 'MOVE BACKWARD'
            font_name: 'RobotoMono-Regular.ttf'
            on_release: root.queueAction('backward ')

        Button: # RIGHT BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.7375
            y: root.height * 0.04
            text: 'TURN RIGHT'
            font_name: 'RobotoMono-Regular.ttf'
            state: 'normal'
            on_release: root.queueAction('right ')
			
		Button: # GO BUTTON
			size_hint: None, None
			size: root.width * 0.05, root.height * 0.1
			text: 'GO'
			font_name: 'RobotoMono-Regular.ttf'
			x: root.width * .9
			y: root.height * .85
			on_release: root.executeAction()
			
		Button: # CLEAR BUTTON
			size_hint: None, None
			size: root.width * 0.05, root.height * 0.1
			text: 'CLEAR'
			font_name: 'RobotoMono-Regular.ttf'
			x: root.width * .85
			y: root.height * .85
			on_release: root.clearAction()

# IMAGES
        Screen:
            Image:
                source: 'cards/CARD_Left.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.0175
                y: root.height * 0.12
                #on_release: root.callPopup()
            Image:
                source: 'cards/CARD_Up.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.2575
                y: root.height * 0.12
            Image:
                source: 'cards/CARD_Down.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.4975
                y: root.height * 0.12
            Image:
                source: 'cards/CARD_Right.jpg'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.7375
                y: root.height * 0.12

<NewGame>:
    name: 'newGame'
    FloatLayout:
        size_hint: None, None
        
# BUTTONS
        Button: #help button
