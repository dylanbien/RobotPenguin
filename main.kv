# LABELS

        Label:
            text: 'New Game'
            font_name: 'RobotoMono-Regular.ttf'
            font_size: 175
            size: root.width * 0.75, root.height * 0.4
            x: root.width * 0.5
            y: root.height * 0.8

        Label:
            text: 'Select a Difficulty'
            font_name: 'RobotoMono-Regular.ttf'
            font_size: 75
            size: root.width * 0.5, root.height * 0.3
            #halign: 'center'
            #valign: 'middle'
            x: root.width * 0.5
            y: root.height * 0.575

