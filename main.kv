<MainScreen>:
    name: 'main'
    FloatLayout:
        size_hint: None, None

# BUTTONS
        Button: # X BUTTON
            text: 'X'
            font_size: 23
            size_hint: None,None
            size: root.width * 0.017, root.width * 0.015
            x: root.width * 0.972
            y: root.height * 0.945
            background_color: 0.7, 0.7, 0.7, 1
            on_release: root.quitPopup()

        Button: # LEFT BUTTON
            text: 'TURN LEFT'
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width *0.0175
            y: root.height * 0.04
            on_release: root.leftPopup()

        Button: # UP BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.2575
            y: root.height * 0.04
            text: 'MOVE UP'
            on_release: root.upPopup()

        Button: # DOWN BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.4975
            y: root.height * 0.04
            text: 'MOVE DOWN'
            on_release: root.downPopup()

        Button: # RIGHT BUTTON
            size_hint: None,None
            font_size: 35
            size: root.width * 0.2245, root.height * 0.1
            x: root.width * 0.7375
            y: root.height * 0.04
            text: 'TURN RIGHT'
            state: 'normal'
            on_release: root.rightPopup()

# IMAGES
        Screen:
            Image:
                source: 'CARD_Left.png'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.0175
                y: root.height * 0.12
                #on_release: root.callPopup()
            Image:
                source: 'CARD_Up.png'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.2575
                y: root.height * 0.12
            Image:
                source: 'CARD_Down.png'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.4975
                y: root.height * 0.12
            Image:
                source: 'CARD_Right.png'
                keep_ratio: True
                opacity: 1
                size_hint: 4.3, 7.5
                x: root.width * 0.7375
                y: root.height * 0.12
